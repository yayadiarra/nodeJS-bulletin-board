pipeline {
agent any
  tools {
    maven "nodejs-king"
  }
 
  stages {
    
    stage ('Maven Clean'){
      steps{
        sh 'mvn clean'
      }
    }
    stage ('Maven package') { 
      steps{
        sh 'mvn package'
      }
    }
 
    stage ('Docker build and push'){
   
           steps{
             withDockerRegistry([ credentialsId: "nodejs_creds", url: "https://index.docker.io/v1/" ]){
               sh 'docker build -t yayadiarra/nodejs-king . -f Dockerfile'
               sh 'docker push yayadiarra/nodejs-king:$BUILD_NUMBER'
              
             }
           }
    }
    

  }
}
